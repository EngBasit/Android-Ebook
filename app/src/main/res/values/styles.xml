  <style name="cardviewImg" parent="Theme.MaterialComponents.Light">
    <item name="android:layout_gravity">center</item>
    <item name="android:scaleType">centerCrop</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/_135sdp</item>
  </style>

  <style name="cardviewTxt" parent="Theme.MaterialComponents.Light">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">@dimen/_5sdp</item>
    <item name="android:paddingBottom">@dimen/_5sdp</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="menuBtn1" parent="Theme.MaterialComponents.Light">
    <item name="android:textSize">18sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">@color/darkGray</item>
    <item name="android:layout_marginTop">@dimen/_5sdp</item>
    <item name="android:layout_marginLeft">@dimen/_5sdp</item>
    <item name="android:layout_marginBottom">@dimen/_5sdp</item>
    <item name="android:textColor">@color/textColour</item>
    <item name="android:paddingTop">@dimen/_10sdp</item>
    <item name="android:paddingBottom">@dimen/_10sdp</item>
    <item name="android:paddingLeft">@dimen/_5sdp</item>
    <item name="android:paddingRight">@dimen/_5sdp</item>
    <item name="android:layout_height">@dimen/_50sdp</item>
  </style>

  <style name="menuBtn2" parent="Theme.MaterialComponents.Light">
    <item name="android:textSize">18sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">@color/darkGray</item>
    <item name="android:layout_marginTop">@dimen/_5sdp</item>
    <item name="android:layout_marginRight">@dimen/_5sdp</item>
    <item name="android:layout_marginBottom">@dimen/_5sdp</item>
    <item name="android:textColor">@color/textColour</item>
    <item name="android:paddingTop">@dimen/_10sdp</item>
    <item name="android:paddingBottom">@dimen/_10sdp</item>
    <item name="android:paddingLeft">@dimen/_5sdp</item>
    <item name="android:paddingRight">@dimen/_5sdp</item>
    <item name="android:layout_height">@dimen/_50sdp</item>
