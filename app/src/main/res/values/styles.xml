<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
  </style>


  <style name="quote" parent="Theme.MaterialComponents.Light">
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@color/textColour</item>
    <item name="android:paddingTop">@dimen/_10sdp</item>
    <item name="android:paddingLeft">@dimen/_10sdp</item>
    <item name="android:paddingRight">@dimen/_10sdp</item>
    <item name="android:paddingBottom">@dimen/_10sdp</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="quoteTitle" parent="Theme.MaterialComponents.Light">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/textColour</item>
    <item name="android:textStyle">italic</item>
    <item name="android:layout_gravity">right</item>
    <item name="android:paddingRight">@dimen/_20sdp</item>
  </style>


  <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
    <item name="cornerFamily">cut</item>
    <item name="cornerSize">8dp</item>

    <item name="android:paddingTop">@dimen/_20sdp</item>
    <item name="android:paddingBottom">@dimen/_20sdp</item>
    <item name="android:paddingLeft">@dimen/_10sdp</item>
    <item name="android:paddingRight">@dimen/_10sdp</item>
    <item name="android:layout_margin">@dimen/_10sdp</item>
    <item name="android:background">#fff</item>
  </style>
  <style name="cardviewLayout" parent="Theme.MaterialComponents">
    ...
    <item name="colorPrimary">@color/cardview_dark_background</item>
    <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
  </style>

